<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:elevation="3dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating"
        android:fontFamily="@font/libre_baskerville"
        android:elevation="3dp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.5"
        android:fontFamily="@font/libre_baskerville"
        android:elevation="3dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/rating"
        app:layout_constraintStart_toEndOf="@+id/rating"
        app:layout_constraintTop_toTopOf="@+id/rating"
        app:srcCompat="@drawable/star"
        app:tint="@color/rattingColor" />

    <TextView
        android:id="@+id/total_rating_upper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(200)"
        android:fontFamily="@font/libre_baskerville"
        android:elevation="3dp"
        android:textStyle="italic"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/rating"
        app:layout_constraintTop_toBottomOf="@+id/rating" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Excellent"
        android:textColor="@color/black"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/rating_1_progressBar"
        app:layout_constraintEnd_toStartOf="@+id/rating_1_progressBar"
        app:layout_constraintTop_toTopOf="@+id/rating_1_progressBar" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Very Good"
        android:textColor="@color/black"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/rating_2_progressBar"
        app:layout_constraintEnd_toStartOf="@+id/rating_2_progressBar"
        app:layout_constraintTop_toTopOf="@+id/rating_2_progressBar" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Good"
        android:textColor="@color/black"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/rating_3_progressBar"
        app:layout_constraintEnd_toStartOf="@+id/rating_3_progressBar"
        app:layout_constraintTop_toTopOf="@+id/rating_3_progressBar" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average"
        android:textColor="@color/black"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/rating_4_progressBar"
        app:layout_constraintEnd_toStartOf="@+id/rating_4_progressBar"
        app:layout_constraintTop_toTopOf="@+id/rating_4_progressBar" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Poor"
        android:textColor="@color/black"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/rating_5_progressBar"
        app:layout_constraintEnd_toStartOf="@+id/rating_5_progressBar"
        app:layout_constraintTop_toTopOf="@+id/rating_5_progressBar" />

    <TextView
        android:id="@+id/rating_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/rating_1_progressBar"
        app:layout_constraintStart_toEndOf="@+id/rating_1_progressBar"
        app:layout_constraintTop_toTopOf="@+id/rating_1_progressBar" />

    <TextView
        android:id="@+id/rating_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/rating_2_progressBar"
        app:layout_constraintStart_toEndOf="@+id/rating_2_progressBar"
        app:layout_constraintTop_toTopOf="@+id/rating_2_progressBar" />

    <TextView
        android:id="@+id/rating_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/rating_3_progressBar"
        app:layout_constraintStart_toEndOf="@+id/rating_3_progressBar"
        app:layout_constraintTop_toTopOf="@+id/rating_3_progressBar" />

    <TextView
        android:id="@+id/rating_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/rating_4_progressBar"
        app:layout_constraintStart_toEndOf="@+id/rating_4_progressBar"
        app:layout_constraintTop_toTopOf="@+id/rating_4_progressBar" />

    <TextView
        android:id="@+id/rating_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="10"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/rating_5_progressBar"
        app:layout_constraintStart_toEndOf="@+id/rating_5_progressBar"
        app:layout_constraintTop_toTopOf="@+id/rating_5_progressBar" />

    <ProgressBar
        android:id="@+id/rating_1_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:progressTint="@color/excellentColor"
        android:progress="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_rating_upper" />

    <ProgressBar
        android:id="@+id/rating_2_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:progressTint="@color/excellentColor"
        android:progress="50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_1_progressBar" />

    <ProgressBar
        android:id="@+id/rating_3_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:progressTint="@color/goodColor"
        android:progress="40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_2_progressBar" />

    <ProgressBar
        android:id="@+id/rating_4_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:progressTint="@color/averageColor"
        android:progress="70"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_3_progressBar" />

    <ProgressBar
        android:id="@+id/rating_5_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:progressTint="@color/poorColor"
        android:progress="40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_4_progressBar" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="30dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/rating_5"
        app:layout_constraintStart_toStartOf="@+id/rating_5"
        app:layout_constraintTop_toBottomOf="@+id/rating_5"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/total_rating_lower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="200"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
        app:layout_constraintStart_toStartOf="@+id/linearLayout3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />
</androidx.constraintlayout.widget.ConstraintLayout>