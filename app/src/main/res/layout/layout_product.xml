<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:background="@color/white"
    app:cardCornerRadius="10dp"
    android:id="@+id/deals_of_the_day_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/deals_of_the_day_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Products For You"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:fontFamily="@font/pt_serif_regular"
        android:elevation="3dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/product_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/product_viewAll_btn" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/product_viewAll_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="View All"
            android:textSize="12dp"
            android:fontFamily="@font/victor_mono"
            android:backgroundTint="@color/white"
            android:textColor="@color/primary"
            android:background="@drawable/login_btn_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>